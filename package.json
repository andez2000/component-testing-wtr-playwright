{
  "name": "basic",
  "version": "1.0.0",
  "description": "```console\r npm init\r npm i --save-dev @web/test-runner\r ```",
  "main": "index.js",
  "scripts": {
    "start": "web-dev-server --open demo/ --node-resolve",
    "start:watch": "web-dev-server --open demo/ --node-resolve --watch",
    "test": "wtr test/**/*.test.js --coverage --node-resolve --playwright --browsers chromium firefox webkit --debug",
    "test:watch": "web-test-runner test/**/*.test.js --node-resolve --watch"
  },
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@open-wc/testing": "^3.1.7",
    "@web/dev-server": "^0.1.35",
    "@web/test-runner": "^0.15.1",
    "@web/test-runner-junit-reporter": "^0.5.0",
    "@web/test-runner-playwright": "^0.9.0"
  }
}
